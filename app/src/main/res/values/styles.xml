<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#5DB075</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashText">

    </style>

    <style name="WideButton">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BigHospiceText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SectionLabel">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="Label">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Value">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="FormInput">
    </style>

    <style name="validationError">
        <item name="android:textColor">@color/error</item>
    </style>
</resources>